<div class="container">
  <h1 class="text-center">Our Cocktails</h1>
  <div class="text-center">
    <%= link_to "Add a coktail", new_cocktail_path , class: "btn btn-primary" %>
  </div>
  <hr>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('cocktails.jpg') %>');">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
