<% content_for(:title_tag) do %>
  Add ingredient
<% end %>

<div class="container">
  <h2>Add a dose for <%= @cocktail.name %></h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= @dose.errors.messages[:cocktail][0] if @dose.errors.messages[:cocktail][0] %>
    <%= f.submit "add a dose", class: "btn btn-primary" %>
  <% end %>
</div>
