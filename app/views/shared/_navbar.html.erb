<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "icon.ico" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search your cocktail">
    </form>

    <!-- Text link -->
    <a href="" class="navbar-wagon-item navbar-wagon-link">About</a>

    <!-- Button (call-to-action) -->
    <%= link_to "Create a cocktail!", new_cocktail_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

</div>
